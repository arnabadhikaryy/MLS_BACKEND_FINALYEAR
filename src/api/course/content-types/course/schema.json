{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "modules": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::module.module",
      "mappedBy": "course"
    },
    "slag": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "text"
    },
    "duration": {
      "type": "integer"
    },
    "level": {
      "type": "enumeration",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ]
    },
    "language": {
      "type": "enumeration",
      "enum": [
        "English",
        "Hindi",
        "Kannada",
        "Tamil",
        "Telugu"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Policy and Procedures",
        "Introduction",
        "Fundraising Communication History",
        "Prospecting and Lead Generation",
        "Fundraising Channels and Execution Mastery"
      ]
    },
    "courseStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "approved",
        "reject"
      ]
    },
    "users": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "enrolled_courses"
    }
  }
}
